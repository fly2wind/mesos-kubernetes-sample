{
"apiVersion": "v1",
"kind": "Pod",
"metadata": {"name":"k8s-master"},
"spec":{
  "hostNetwork": true,
  "containers":[
    {
      "name": "controller-manager",
      "image": "gcr.io/google_containers/hyperkube:{{ kubernetes_version }}",
      "command": [
              "/hyperkube",
              "controller-manager",
              "--master=0.0.0.0:8080",
              "--v=2"
        ]
    },
    {
      "name": "apiserver",
      "image": "gcr.io/google_containers/hyperkube:{{ kubernetes_version }}",
      "command": [
              "/hyperkube",
              "apiserver",
              "--address=127.0.0.1",
              "--etcd-servers=http://127.0.0.1:2379",
              "--cluster-name=kubernetes",
              "--portal-net=10.0.0.1/24",
              "--v=2"
        ]
    },
    {
      "name": "scheduler",
      "image": "gcr.io/google_containers/hyperkube:{{ kubernetes_version }}",
      "command": [
              "/hyperkube",
              "scheduler",
              "--master=0.0.0.0:8080",
              "--v=2"
        ]
    }
  ]
 }
}
